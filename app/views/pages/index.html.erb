<% unless user_signed_in? %>
  <div class="nht-header">
    <%= render "home_header" %>
  </div>
<% end %>
<div class="nht-home-background">
  <h1 id="title-slide-letter" class="s_title"></h1>
  <p id="slide-letter" class="s_title_1"></p>
  <div class="td-image-wrap-background img-responsive"></div>
  <div class="td-button-google-play hvr-bubble-float-bottom td-button-download
    animated bounceInUp td-delay">
    <%= image_tag "google_play.png", class: "td-button-google-play-icon" %>
    <div class="td-button-google-play-text">
      <i class="upcase"><%= t :get_it %></i>
      <p><%= t :google_play %></p>
    </div>
    <div class="clearfix"></div>
  </div>

  <div class="td-button-app-store hvr-bubble-float-bottom td-button-download
    animated bounceInUp td-delay">
    <%= image_tag "apple.png", class: "td-button-app-store-icon" %>
    <div class="td-button-app-store-text">
      <i class="upcase"><%= t :get_it %></i>
      <p><%= t :app_store %></p>
    </div>
    <div class="clearfix"></div>
  </div>

  <div class="td-button-window-store hvr-bubble-float-bottom td-button-download
    animated bounceInUp td-delay">
    <%= image_tag "google_play.png", class: "td-button-window-store-icon" %>
    <div class="td-button-window-store-text">
      <i class="upcase"><%= t :get_it %></i>
      <p><%= t :google_play %></p>
    </div>
    <div class="clearfix"></div>
  </div>
</div>

<div class="td-signup-now container-fluid">
  <div class="row">
    <div class="container">
      <div class="td-signup-now-content animated fadeInUp td-delay">
        <h1 class="text-center"><%= t "signup-now-text-test-1" %></h1>
        <p class="text-center"><%= t "signup-now-text-test-2" %></p>
        <%= link_to t("devise.sign_up"), new_user_registration_path, class: "td-signup-now-button" %>
      </div>
    </div>
  </div>
</div>

<div class="td-ishipper-benefit">
  <div class="col-xs-12 col-sm-6 td-ishipper-benefit-col-left">
    <div class="td-benefit-content col-md-10 col-md-offset-2">
      <h2 class="text-center"><%= t "shop.benefit" %></h2>
      <div class="td-line"></div>
      <ul>
        <li>1. <%= t "easy_delivery" %></li>
        <li>2. <%= t "easy_create" %></li>
        <li>3. <%= t "easy_manage" %></li>
        <li>4. <%= t "easy_find" %></li>
        <li>5. <%= t "find_shipper" %></li>
      </ul>
    </div>
  </div>
  <div class="col-xs-12 col-sm-6 td-ishipper-benefit-col-right">
    <div class="td-benefit-content col-md-10">
      <h2 class="text-center"><%= t "shipper.benefit" %></h2>
      <div class="td-line"></div>
      <ul>
        <li>1. <%= t "many_invoice" %></li>
        <li>2. <%= t "option_receive" %></li>
        <li>3. <%= t "more_invoice" %></li>
        <li>4. <%= t "easy_manage" %></li>
      </ul>
    </div>
  </div>
  <div class="clearfix"></div>
</div>

<section id="section" class="course-progress clearfix">
  <div class="section-title">
    <%= t :working %>
  </div>

  <div class="container">
    <div class="col-xs-10 col-sm-10 col-md-10 col-lg-10 timeline
      col-lg-offset-1 col-lg-offset-1 col-lg-offset-1 col-lg-offset-1">
      <div class="col-md-12 timeline-block">
        <div class="col-md-6">
          <div class="timeline-content">
            <div class="timeline-heading">
              <h3 class="title">
                <%= t "create_easy" %>
              </h3>
            </div>
            <div class="timeline-body">
              <p>
                <%= t "create_easy_content" %>
              </p>
            </div>
          </div>
        </div>
      </div>

      <div class="col-md-12 timeline-block">
        <div class="col-md-6">
          <div class="timeline-content">
            <div class="timeline-heading">
              <h3 class="title">
                <%= t "already_shipper" %>
              </h3>
            </div>
            <div class="timeline-body">
              <p>
                <%= t "already_shipper_content" %>
              </p>
            </div>
          </div>
        </div>
      </div>

      <div class="col-md-12 timeline-block">
        <div class="col-md-6">
          <div class="timeline-content">
            <div class="timeline-heading">
              <h3 class="title">
                <%= t "shop_active" %>
              </h3>
            </div>
            <div class="timeline-body">
              <p>
                <%= t "shop_active_content" %>
              </p>
            </div>
          </div>
        </div>
      </div>

      <div class="col-md-12 timeline-block">
        <div class="col-md-6">
          <div class="timeline-content">
            <div class="timeline-heading">
              <h3 class="title">
                <%= t "assess_shipper" %>
              </h3>
            </div>
            <div class="timeline-body">
              <p>
                <%= t "assess_shipper_content" %>
              </p>
            </div>
          </div>
        </div>
      </div>

      <div class="col-md-12 timeline-block">
        <div class="col-md-6">
          <div class="timeline-content">
            <div class="timeline-heading">
              <h3 class="title">
                <%= t "shop_favorite" %>
              </h3>
            </div>
            <div class="timeline-body">
              <p>
                <%= t "shop_favorite_content" %>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<%= render "feed_backs/form" %>
<div id="nht-sign_up" class="modal fade"></div>
<div id="nht-log_in" class="modal fade"></div>
<div id="lvc-not-receive-confirm" class="modal fade"></div>
