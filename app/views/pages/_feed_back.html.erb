<section id="feed_back">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 text-center">
          <h2 class="section-heading"><%= t "feed_back.feed_back_us" %></h2>
          <h3 class="section-subheading text-muted"><%= t "feed_back.feed_back_with_email" %></h3>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-12">
          <form name="sentMessage" id="FeedBackForm" novalidate>
            <div class="row">
              <%= form_for @feed_back do |f| %>
                <div class="col-md-6">
                  <div class="form-group">
                    <%= f.text_field :name, placeholder: t("feed_back.your_name"),
                      class: "form-control", id: "name" %>
                  </div>
                  <div class="form-group">
                    <%= f.text_field :email, placeholder: t("feed_back.your_email"),
                      class: "form-control", id: "email" %>
                  </div>
                  <div class="form-group">
                    <%= f.text_field :phone, placeholder: t("feed_back.your_phone"),
                      class: "form-control", id: "phone" %>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    <%= f.text_area :message, placeholder: t("feed_back.your_message"),
                      class: "form-control", id: "message" %>
                  </div>
                </div>
                <div class="col-lg-12 text-center">
                  <div id="success"></div>
                  <%= f.submit t("feed_back.send_message"), class: "btn btn-xl" %>
                </div>
              <% end %>
            </div>
          </form>
        </div>
      </div>
    </div>
</section>
