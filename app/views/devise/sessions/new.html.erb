<section class="td-signin">
  <div class="container">
    <div class="row">
      <div class="col-md-7 col-sm-7 col-xs-12 td-col-left">
        <h2 class="text-center"><%= t "devise.log_in" %></h2>

        <%= form_for resource, as: resource_name,
          url: session_path(resource_name) do |f| %>
          <div class="input">
            <%= f.label :phone_number %><br />
            <%= f.text_field :phone_number, autofocus: true,
              class: "form-control signin-input" %>
          </div>

          <div class="input">
            <%= f.label :password %><br />
            <%= f.password_field :password, autocomplete: "off",
              class: "form-control signin-input" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="input">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>

          <div class="actions">
            <%= f.submit t("devise.login"),
              class: "hvr-pulse-shrink btn btn-primary" %>
          </div>
        <% end %>

      </div>
      <div class="col-md-5 col-sm-5 col-xs-12 td-col-right">
        <%= render "devise/shared/links" %>
      </div>
      <div class="clearfix"></div>
    </div>
  </div>
</section>
