<div class="nht-rate">
  <h3><%= t "rate.title" %></h3>
  <% rates.each do |rate| %>
    <div class="col-xs-8 col-xs-offset-2 col-sm-8 col-sm-offset-2
      col-md-6 col-md-offset-0 col-lg-6 col-lg-offset-0">
      <hr>
      <div class="col-xs-8 col-xs-offset-2 col-sm-8 col-sm-offset-2
        col-md-3 col-md-offset-0 col-lg-3 col-lg-offset-0 nht-user-avatar">
        <%= image_tag avatar_profile(rate.owner.avatar.url), id: "avatar", class: "img-responsive" %>
        <p class="nht-owner-rate"><strong><%= rate.owner.name %></strong></p>
      </div>
      <div class="col-xs-10 col-xs-offset-2 col-sm-10 col-sm-offset-2 col-md-9 col-md-offset-0
        col-lg-9 col-lg-offset-0 nht-review-content">
        <div class="nht-review-top">
          <span>
            <% rate.rating_point.to_i.times do %>
              <i class="fa fa-star nht-star"></i>
            <% end %>
          </span>

          <span class="small">
            <%= time_ago_in_words rate.created_at %>
            <%= t :time_ago %>
          </span>
        </div>
        <%= simple_format rate.content %>
      </div>
      <div class="clearfix"></div>
    </div>
  <% end %>
</div>
