<div class="w3-container w3-content container nht-profile">
  <div class="w3-row-padding nht-profile-box">

    <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
      <div class="w3-white w3-text-grey w3-card-4">
        <div class="w3-display-container">
          <%= image_tag "profile.jpg", id: "avatar" %>
          <div class="w3-display-bottomleft w3-container w3-text-black">
            <h3><%= @user.name %></h3>
            <div class="nht-user-invoice">
              <div class="nht-user-sum-invoice">
                <%= t "users.sum_invoices" %>
              </div>
              <div class="nht-user-success-invoice">
                <%= t "users.success_invoices" %>
              </div>
            </div>
          </div>
        </div>
        <br>
        <div class="w3-container">
          <p><i class="fa fa-briefcase fa-fw w3-margin-right w3-large w3-text-teal">
            </i><%= @user.role %></p>
          <p><i class="fa fa-home fa-fw w3-margin-right w3-large w3-text-teal">
            </i><%= @user.address %></p>
          <p><i class="fa fa-envelope fa-fw w3-margin-right w3-large w3-text-teal">
            </i><%= @user.email %></p>
          <p><i class="fa fa-phone fa-fw w3-margin-right w3-large w3-text-teal">
            </i><%= @user.phone_number %></p>
          <hr>
        </div>
      </div><br>
    </div>
    <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8">
      <% if can? :update, @user %>
        <div class="w3-container w3-card-2 w3-white w3-margin-bottom">
          <div class="text-center nht-profile-title">
              <%= t "users.edit_user" %>
          </div>

          <div class="nht-user-info">
            <%= form_for @user do |f| %>
              <div class="input-group">
                <span class="input-group-addon">
                  <i class="fa fa-user user-name" aria-hidden="true"></i>
                </span>
                <%= f.text_field :name, class: "form-control",
                  placeholder: t("users.name") %>
              </div>

              <div class="input-group">
                <span class="input-group-addon">
                  <i class="fa fa-home user-home" aria-hidden="true"></i>
                </span>
                <%= f.text_field :address, class: "form-control",
                  placeholder: t("users.address") %>
              </div>

              <div class="input-group">
                <span class="input-group-addon">
                  <i class="fa fa-envelope"></i>
                </span>
                <%= f.text_field :email, class: "form-control",
                  placeholder: t("users.email") %>
              </div>

              <div class="nht-user-submit">
                <%= link_to "Change password", "#", class: "change-password" %>
                <%= f.submit t("users.save"), class: "btn btn-primary" %>
                <div class="clearfix"></div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>

      <div class="col-xs-8 col-sm-8 col-md-10 col-lg-10
        col-xs-offset-2 col-sm-offset-2 col-md-offset-1 col-lg-offset-1" id="map-profile">
      </div>
      <div class="none">
        <%= hidden_field_tag "td-latitude", @user.latitude %>
        <%= hidden_field_tag "td-longitude", @user.longitude %>
      </div>
      <div class="w3-container w3-card-2 w3-white w3-margin-bottom">
        <div class="text-center nht-profile-title">
            <%= t "users.reviews" %>
        </div>

        <div class="td-user-info">
          <%= render "reviews" %>
        </div>
      </div>
    </div>
  </div>
</div>
