<!DOCTYPE html>
<html>
  <head>
    <title><%= t :title %></title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag "application", media: "all",
      "data-turbolinks-track": "reload" %>
    <%= javascript_include_tag "application",
      "data-turbolinks-track": "reload" %>
  </head>

  <body>
    <% if user_signed_in? %>
      <div class="nht-header">
        <%= render "layouts/header" %>
      </div>
    <% end %>
    <div class="container-fluid" id="main">
      <div class="row">
        <div id="flash">
          <% flash.each do |message_type, message| %>
            <div class="alert alert-<%= message_type %> nht-flash"><%= message %></div>
          <% end %>
          <div class="clearfix"></div>
        </div>
        <%= yield %>
      </div>
    </div>
    <footer class="footer">
      <%= render "layouts/footer" %>
    </footer>
  </body>
</html>
