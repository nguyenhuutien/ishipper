<!DOCTYPE html>
<html>
  <head>
    <title><%= t :title %></title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag "application", media: "all",
      "data-turbolinks-track": "reload" %>
    <%= javascript_include_tag "application",
      "data-turbolinks-track": "reload" %>
    <meta name="turbolinks-cache-control" content="no-cache">
    <%= javascript_include_tag Ckeditor.cdn_url %>
  </head>

  <body>
    <% if user_signed_in? %>
      <% if current_user.admin? %>
        <div class="nht-header td-admin-sidebar">
          <%= render "layouts/admin_sidebar" %>
        </div>
        <div class="w3-main td-nav-hide td-admin">
          <%= render "layouts/body_form" %>
        </div>
      <% else %>
        <div class="w3-main td-nav-hide">
          <div class="nht-header">
            <%= render "layouts/header" %>
          </div>
          <i class="fa fa-bars w3-opennav w3-hide-large w3-xlarge w3-margin-left
            w3-margin-top td-menu-hide">
          </i>
          <%= render "layouts/body_form" %>
        </div>
      <% end %>
    <% else %>
      <%= render "layouts/body_form" %>
    <% end %>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAik8OVJ3_JisisBdw7aS20dQDt3lD1bG0&sensor=false&libraries=places" data-turbolinks-eval="false" ></script>
  </body>
</html>
